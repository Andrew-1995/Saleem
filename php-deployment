apiVersion: apps/v1
kind: Deployment
metadata:
  name: crbt-php-channel
  labels:
    app: php-channel
spec:
  replicas: 1
  selector:
    matchLabels:
      app: php-channel
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  template:
    metadata:
      labels:
        app: php-channel
    spec:
      containers:
      - name: php-fpm-apache2-oci8
        image: test1apache
        imagePullPolicy: IfNotPresent
        ports:
        - name: http
          containerPort: 80
        volumeMounts:
        - name: channels-codes-channel
          mountPath: /var/www/html/
          readOnly: false
        readinessProbe:
          httpGet:
            path: /php
            port: 80
          initialDelaySeconds: 3
          periodSeconds: 3
      - name: solsson-exporter-apache-channel
        image: solsson/prometheus-exporter-apache
        imagePullPolicy: IfNotPresent
        ports:
        - name: http
          containerPort: 9117
      nodeName: crbtworker01
      volumes:
      - name: channels-codes-channel
        hostPath:
          path: /mnt/shared/phpcodes/php-channel
          type: Directory
